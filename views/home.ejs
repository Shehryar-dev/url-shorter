<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>URL Shortener</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold text-center text-blue-600 mb-8">ðŸ”— URL Shortener</h1>

    <form method="POST" action="/url" class="space-y-4">
      <label class="block text-lg font-medium text-gray-700">Enter Your Original URL</label>
      <input 
        type="text" 
        name="url" 
        placeholder="https://example.com"
        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        required
      />
      <button 
        type="submit" 
        class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition"
      >
        Generate Short URL
      </button>
    </form>

    <% if(locals.id) { %>
      <div class="mt-6 bg-green-100 text-green-800 p-4 rounded-lg shadow-sm text-center">
        âœ… Short URL Generated: 
        <a href="http://localhost:3002/url/<%= id %>" class="text-blue-600 underline">
          http://localhost:3002/url/<%= id %>
        </a>
      </div>
    <% } %>

    <% if(locals.urls) { %>
      <h2 class="text-2xl font-semibold mt-10 mb-4">ðŸ“Š URL Analytics</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
          <thead class="bg-blue-600 text-white text-left">
            <tr>
              <th class="px-4 py-3">S.No</th>
              <th class="px-4 py-3">Short ID</th>
              <th class="px-4 py-3">Short URL</th>
              <th class="px-4 py-3">Redirect</th>
              <th class="px-4 py-3">Clicks</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <% urls.forEach((url, index) => { %>
              <tr class="border-t hover:bg-gray-50">
                <td class="px-4 py-3"><%= index + 1 %></td>
                <td class="px-4 py-3"><%= url.shortId %></td>
                <td class="px-4 py-3">
                  <a href="http://localhost:3002/url/<%= url.shortId %>" class="text-blue-500 underline">
                    /url/<%= url.shortId %>
                  </a>
                </td>
                <td class="px-4 py-3 truncate"><%= url.redirectURL %></td>
                <td class="px-4 py-3 font-semibold"><%= url.visitHistory.length %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

</body>
</html>
